
<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/addproduct" class="btn btn-success ml-auto">Add Product</a>

    </div>

  </div>
    <div class="container">
        <table class="table mt-5">
            <thead>
              <tr>
                <th scope="col">NO</th>
                <th scope="col">name</th>
                <th scope="col">Catagory</th>
                <th scope="col">Price</th>
                <th scope="col">disription</th>
                <th scope="col">Image</th>
              </tr>
            </thead>
            <tbody>
              <%for (i=0;i<products.length;i++){ %>
              <tr>
                <th scope="row"><%=i+1%></th>
                <td><%= products[i].Name%></td>
                <td><%= products[i].category%></td>
                <td><%= products[i].price%></td>
                <td><%= products[i].description%></td>
                <td><img style="width: 50px;height: 50px;" src="/public/images/product-images/<%= products[i]._id%>.jpg" alt=""></td>
                <td><a href="/admin/edit-product/<%= products[i]._id%>" class="btn btn-primary">Edit</a></td>
                <td><a href="/admin/deleteproduct/<%= products[i]._id%>"  class="btn btn-danger" onclick="return confirm('Are you want to delete <%= products[i].Name%>?')">Delete</a></td>
              </tr>
              
              <%}%>
              
            </tbody>
          </table>
    </div>

</section>