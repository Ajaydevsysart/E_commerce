<section>
    <div class="container">
        <table class="table nt-5">
            <thead>
                <tr>

                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>

                </tr>
            </thead>
            <tbody>
                <%for (i=0;i<products.length;i++){ %>
                    <tr>

                        <td><img src="/public/images/product-images/<%= products[i].product._id%>.jpg"
                                style="height:70px; width:70px"></td>
                        <td>
                            <%= products[i].product.Name%>
                        </td>
                        <td>

                            <button class="cart-item-count mr-3" onclick="changeQuantity('<%products[i]._id%>','<%products[i].product._id%>',-1)">-</button>
                            <%= products[i].quantity%><button class="cart-item-count ml-3"
                                    onclick="changeQuantity('<%products[i]._id%>','<%products[i].product._id%>',1)">+</button>
                        </td>
                        <td>
                            <a href="" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
</section>

<!-- quantity changing cart ajax function -->

<script>
    function changeQuantity(cartId,proId,count){
        $.ajax({
            url:'/change-product-quantity',
            data:{
                cart:cartId,
                product:proId,
                count:count
            },
            method:'post',
            success:(response)=>{
                alart(response)

            }
        })

    }
</script>