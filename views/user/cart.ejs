<section>
    <div class="container">
        <table class="table nt-5">
            <thead>
                <tr>

                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>

                </tr>
            </thead>
            <tbody>
                <%for (i=0;i<products.length;i++){ %>
                <tr>
                    <%for (i=0;i<products[i].product.length;i++){ %>
                    <td><img src="/public/images/product-images/<%= product[i]._id%>.jpg" style="height:70px; width:70px"></td>
                    <td><%= product[i].Name%></td>
                    <td>
                        <button class="cart-item-count mr-3">-</button><%= product[i].quantity%><button class="cart-item-count ml-3">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                    <%}%>
                </tr>
                <%}%>
            </tbody>

        </table>

    </div>
</section>