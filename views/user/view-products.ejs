<section>
  <div class="container mt-5">
    <div class="row">
      <%for (i=0;i<products.length;i++){ %>

        <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem;height:25rem">
            <img class="card-img-top" src="/public/images/product-images/<%= products[i]._id%>.jpg" alt="Card image cap"
              style="height:15rem">
            <div class="card-body">
              <h5 class="card-title">
                <%= products[i].Name%>
              </h5>
              <p class="card-text">
                <%= products[i].description%>
              </p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>

        </div>
        <%}%>


    </div>

  </div>
  </div>
</section>