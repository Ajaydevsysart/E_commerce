
<section>

  <div class="container mt-5">
    <div class="row">
      <%for (i=0;i<products.length;i++){ %>

        <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem;height:25rem">
            <img class="card-img-top" src="/public/images/product-images/<%= products[i]._id%>.jpg" alt="Card image cap"
              style="height:12rem">
            <div class="card-body">
              <h5 class="card-title">
                <b><%= products[i].Name%></b>
              </h5>
              <p class="card-text">
                <i>Rs <%= products[i].price%></i>
              </p>
              <p class="card-text">
                <%= products[i].description%>  
              </p>
              
              <button onclick="addToCart('<%= products[i]._id%>')" class="btn btn-primary">Add to Cart</button>
            </div>
          </div>

        </div>
        <%}%>


    </div>

  </div>
  </div>
</section>

