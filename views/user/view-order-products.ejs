
<section>

    <div class="container mt-5">
      <div class="row">
        <%for (i=0;i<products.length;i++){ %>
  
          <div class="col-md-3 p-3">
            <div class="card" style="width: 15rem;height:25rem">
              <img class="card-img-top" src="/public/images/product-images/<%= products[i].product._id%>.jpg" alt="Card image cap"
                style="height:12rem">
              <div class="card-body">
                <h5 class="card-title">
                  <b><%= products[i].product.Name%></b>
                </h5>
                <p class="card-text">
                  <i>Rs <%= products[i].product.price%></i>
                </p>
                <p class="card-text">
                            Quantity: <%= products[i].quantity%>  
                </p>
                
                
              </div>
            </div>
  
          </div>
          <%}%>
  
  
      </div>
  
    </div>
    </div>
  </section>