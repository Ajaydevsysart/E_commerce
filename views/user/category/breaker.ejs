<div class="container">
    <div class="row">
        <%for (i=0;i<products.length;i++){ %>
            <%if(products[i].catagory=="Breaker"){%>
                <div class="col-md-3 col-sm-6">
                    <div class="product-grid2">
                        <div class="product-image2">
                            <a href="#">
                                <img class="pic-1" src="/public/images/product-images/<%= products[i]._id%>.jpg">
                            </a>
                            <ul class="social">
                                <li><a href="#" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
                                <li><a href="#" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>
                                <!-- <li><a href="#" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li> -->
                            </ul>
                            
                            <a class="add-to-cart" onclick="addToCart('<%= products[i]._id%>')">Add to cart</a>
                        </div>
                        <div class="product-content">
                            <h3 class="title"><a href="#"><%= products[i].Name%></a></h3>
                            <span class="price">Rs:<%= products[i].price%></span>
                        </div>
                    </div>
                </div>
            <%}%>
        <%}%>

    </div>
</div>